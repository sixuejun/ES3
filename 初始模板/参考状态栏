<script>
    (function () {
        const uniqueId = '{{randomId}}';
        const rawDataElement = document.getElementById('theater-raw-data-' + uniqueId);
        const container = document.getElementById('theater-container-' + uniqueId);
        const title = container?.previousElementSibling; // ğŸŒ¿ Â· å°å‰§åœº Â· ğŸŒ¿

        if (!rawDataElement || !container || !title) return;

        const rawText = rawDataElement.getAttribute('data-text');
        if (!rawText) return;

        let rendered = false; // é˜²æ­¢é‡å¤æ¸²æŸ“

        // ç‚¹å‡»æ ‡é¢˜åå†æ¸²æŸ“å¯¹è¯
        title.style.cursor = 'pointer';
        title.title = 'ç‚¹å‡»å±•å¼€å°å‰§åœº';
        title.addEventListener('click', () => {
            if (rendered) {
                container.style.display = container.style.display === 'none' ? 'flex' : 'none';
                return;
            }

            // âœ… æ”¹è¿›ç‰ˆæ­£åˆ™ï¼šåŒ¹é… ã€å‘è¨€äººï¼ˆå¯å«æ‹¬å·æè¿°ï¼‰: å†…å®¹ã€‘ ï¼Œæ”¯æŒä¸­è‹±æ–‡å†’å·
            const matches = [...rawText.matchAll(/ã€([^ï¼š:]+)[ï¼š:](.*?)ã€‘/g)];

            matches.forEach(match => {
                const fullSpeaker = match[1]?.trim(); // ä¾‹ï¼šç¨‹åŒ—æï¼ˆå†…å¿ƒOSï¼‰
                const content = match[2]?.trim();
                if (!fullSpeaker || !content) return;

                // åˆ¤æ–­æ˜¯å¦ä¸ºâ€œç¨‹åŒ—æâ€ä¸»è§†è§’
                const isCheng = fullSpeaker.startsWith('ç¨‹åŒ—æ');
                const bubbleSide = isCheng ? 'left' : 'right';

                // åˆ›å»ºå¤–å±‚å®¹å™¨ï¼ˆå«å‘è¨€äººåï¼‰
                const bubbleWrapper = document.createElement('div');
                bubbleWrapper.style.display = 'flex';
                bubbleWrapper.style.flexDirection = 'column';
                bubbleWrapper.style.alignItems = isCheng ? 'flex-start' : 'flex-end';

                // å‘è¨€äººæ ‡ç­¾
                const speakerLabel = document.createElement('div');
                speakerLabel.textContent = fullSpeaker;
                speakerLabel.style.fontSize = '0.85em';
                speakerLabel.style.color = 'var(--text-light)';
                speakerLabel.style.margin = isCheng ? '0 0 4px 8px' : '0 8px 4px 0';

                // å¯¹è¯æ°”æ³¡
                const bubble = document.createElement('div');
                bubble.classList.add('bubble', bubbleSide);
                bubble.textContent = content;

                // ç»„åˆ
                bubbleWrapper.appendChild(speakerLabel);
                bubbleWrapper.appendChild(bubble);
                container.appendChild(bubbleWrapper);
            });

            rendered = true;
            container.style.display = 'flex';
            title.textContent = 'ğŸŒ¿ Â· å°å‰§åœº Â· ğŸŒ¿';
        });
    })();
</script>


